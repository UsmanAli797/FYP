    <section class="home-section">
        <div class="home-content">
            <i class='bx bx-menu'></i>
            <span class="text text-white">Forensic Analysis</span>
        </div>
        <center>

            <div class="max-w-2xl max-h-fit border-2 border-black rounded-2xl mt-10 mb-6 bg-white ">
                <form action="report_c" method="post" enctype="multipart/form-data">


                    <h1 class="font-extrabold text-xl text-center mx-2 my-2 text-black-1">Report</h1>
                  <h2 class="font-semibold text-center mb-2  text-black-1">Please Enter Evidence Analysis Report.</h2>
                    </div><br>

                      </div>
                      <i style="font-size:24px" class="far fa-address-card"></i>
